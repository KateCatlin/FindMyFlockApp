
<html>
<body>
  <div class="container ">
    <div class="row">
      <div class="col-xs-9">
        <%= form_for @user, url: edit_skills_return_user_path(@user), method: :post do |f| %>
          <% @skills_numeric_hash.each do |hash| %>
          <h1> How skilled are you with <%= hash[0] %>? </h1>
          <div class="form-check">
              <input class="form-check-input" type="radio" name="<%=hash[0]%>" id="<%=hash[0]%>-radio" value="1" checked>
              <label class="form-check-label" for="<%=hash[0]%>-radio">
                Only a little knowledge
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="<%=hash[0]%>" id="<%=hash[0]%>-radio" value="2">
              <label class="form-check-label" for="<%=hash[0]%>-radio">
                Gaining competency
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="<%=hash[0]%>" id="<%=hash[0]%>-radio" value="3" >
              <label class="form-check-label" for="<%=hash[0]%>-radio">
                Individual competency
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="<%=hash[0]%>" id="<%=hash[0]%>-radio" value="3" >
              <label class="form-check-label" for="<%=hash[0]%>-radio">
                Strong competency
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="<%=hash[0]%>" id="<%=hash[0]%>-radio" value="3" >
              <label class="form-check-label" for="<%=hash[0]%>-radio">
                Expert
              </label>
            </div>
          <% end %>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>

</body>
</html>
