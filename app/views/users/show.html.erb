<body id="dashboard-body">

  <div class="profile-header">
 <div class="row justify-content-center ">
      <div class="col-xs-12 col-sm-4 col-md-4 justify-content-center align-self-center">
        <div id="dashboard-photo">
          <%= cl_image_tag current_user.photo %>
        </div>
      </div>

  <div class="col-xs-12 col-sm-8 col-md-8 justify-content-center align-self-center">
    <div class="heading-box">
      <h2 class="centered dashboard-home">Welcome to your profile <em class="underlined-medium"> <%= current_user.first_name %></em></h2>
      <br>
      <p class="centered">You are looking for jobs in:</p>
      <h5 class="centered"> <em><%= current_user.location_list %></em></h5>
      <br>
      <p class="centered"><%= link_to 'Edit your profile', edit_user_path(current_user), class: "btn btn-stroke" %></p>
    </div>
  </div>
  </div>
  </div>
</div>

<hr class="separator">

<div class="row justify-content-center">
  <div class="col-xs-4">

    <div class="profile-box">
      <h3 class="profile-title centered" style="
    font-weight:  bolder;">Your skills</h3>
      <br>
      <% current_user.skills_competencies.each do |skill, competency| %>
      <ul>
      <li class="skills-list centered""><%= skill.capitalize %></li>
      <li class="skills-list centered" style="background-color: #ffffff;color:black"><%= competency %></li>
        </ul>
        <% end %>
      </div>
    </div>

    <div class="col-xs-4">
      <div class="profile-box">
        <h3 class="profile-title centered" style="
    font-weight:  bolder;">Your values</h3>
        <br>
        <% current_user.value_list.each do |value| %>
        <ul class="skills-list centered">

      <li class="centered"><%= value %></li>
        </ul>
        <% end %>

      </div>
    </div>
  </div>
  <p class="centered"><%= link_to "Delete My Account", user_path(current_user), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-stroke" %></p>
</div>


</body>
