<h1><%= @job.title  %></h1>
<h2><%= @job.company %></h2>

<div class="row justify-content-center">
  <div class="col-8">
    <h3><%= @job.location %></h3>
    <p><%= @job.description %></p>
  </div>
</div>
<div class="row justify-content-center text-center">
  <div class="col-8">
    <% if @already_applied%>
    <p class="btn btn-stroke">Cancel ?</p>
    <% else %>
    <%= link_to 'Apply', job_applications_path(@job), method: :create, class: "btn btn-stroke" %>
    <% end %>
    <%= link_to 'Back', dashboard_index_path, class: "btn btn-stroke" %>
  </div>
</div>

