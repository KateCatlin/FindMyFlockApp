<% content_for :meta_title, "#{@job.title} is on #{DEFAULT_META["meta_product_name"]}" %>
<% content_for :meta_description, @job.description %>

<h1 class="centered small-padded-title"><%= @job.title  %></h1>
<h4 class="centered"><%= @job.company %></h2>

<div class="row justify-content-center">
  <div class="col-8">
    <h5 class="centered"><%= @job.location_list %></h3>
    <p class="small-padded-title"><%= @job.description %></p>

  <div class="grid">
    <div class="grid-first-column">
    <div class="values">Values:</div>
    <% @job.value_list.each do |value| %>
    <ul class="values-list">
    <li><%= value %> </li>
    </ul>
    <% end %>
    </div>

    <div class="grid-second-column-first">
      <div class="values">Skills needed:</div>
    <% @job.skill_list.each do |skill| %>
      <ul class="skills-list">
        <li><%= skill.chop %></li>
    </ul>
    <% end %>
  </div>

  <div class="grid-second-column-second">
    <div class="values">Salary range:</div>
     <%= @job.salary_list.last %>
  </div>

  </div>

<div class="row justify-content-center text-center">
  <div class="bottom-buttons col-8">
    <% if @already_applied%>
      <%= link_to 'Cancel?', job_application_path(@job, @application), method: :delete, class: "btn btn-stroke" %>
    <% else %>
      <%= link_to 'Apply', job_applications_path(@job), method: :create, class: "btn btn-stroke" %>
    <% end %>

    <%= link_to 'Back', dashboard_index_path, class: "btn btn-stroke" %>
  </div>
</div>
</div>



